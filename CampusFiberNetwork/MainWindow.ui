    left: 15px;
    padding: 0 8px 0 8px;
    color: #4285f4;
    font-size: 15px;
}

QGraphicsView {
    background-color: white;
    border: 2px solid #e4e7ed;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

QSpinBox {
    border: 1px solid #dcdfe6;
    border-radius: 6px;
    padding: 8px 30px 8px 10px; /* 增加内边距，为上下按钮留出空间 */
    font-size: 16px;
    background-color: white;
    min-height: 36px;
}

QSpinBox:focus {
    border-color: #4285f4;
    outline: none;
    box-shadow: 0 0 0 2px rgba(66, 133, 244, 0.2);
}

/* 上下按钮容器 */
QSpinBox::up-button, QSpinBox::down-button {
    width: 30px;
    border: none;
    background-color: #f5f7fa;
}

/* 上按钮 */
QSpinBox::up-button {
    border-top-right-radius: 6px;
    border-bottom-right-radius: 0;
}

/* 下按钮 */
QSpinBox::down-button {
    border-top-right-radius: 0;
    border-bottom-right-radius: 6px;
}

/* 箭头样式 - 使用+和-符号 */
QSpinBox::up-arrow {
    width: 16px;
    height: 16px;
    image: none;
}

QSpinBox::up-arrow::before {
    content: "+";
    font-size: 16px;
    font-weight: bold;
    color: #606266;
}

QSpinBox::down-arrow {
    width: 16px;
    height: 16px;
    image: none;
}

QSpinBox::down-arrow::before {
    content: "-";
    font-size: 16px;
    font-weight: bold;
    color: #606266;
}

/* 按钮悬停效果 */
QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #e4e7ed;
}

/* 按钮按下效果 */
QSpinBox::up-button:pressed, QSpinBox::down-button:pressed {
    background-color: #dcdfe6;
}

QLabel {
    color: #606266;
    font-size: 14px;
    font-weight: 500;
